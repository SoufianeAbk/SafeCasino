@model SafeCasino.Web.ViewModels.GamesIndexViewModel
@{
    ViewData["Title"] = "Casino Games - SafeCasino";
}

<!-- Page Header -->
<div class="section-bg-dark py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-4 text-white text-center mb-3">
                    <i class="fas fa-gamepad text-gold"></i> CASINO GAMES
                </h1>
                <p class="lead text-center text-light mb-0">
                    Ontdek onze collectie van <strong class="text-gold">@Model.TotalGames</strong> spellen
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Filters Section -->
<div class="section-bg-card py-4">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-3 align-items-end" id="filterForm">
                    <!-- ============ AJAX: LIVE SEARCH ============ -->
                    <div class="col-md-4">
                        <label class="form-label">
                            <i class="fas fa-search"></i> Zoek naar spel
                        </label>
                        <div class="position-relative">
                            <input type="text"
                                   id="searchInput"
                                   name="search"
                                   value="@Model.SearchQuery"
                                   class="form-control"
                                   placeholder="Typ spelnaam..."
                                   autocomplete="off" />
                            <div id="searchResults" class="search-results"></div>
                        </div>
                    </div>

                    <!-- Categorie Filter -->
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-filter"></i> Categorie
                        </label>
                        <select name="categoryId" id="categoryFilter" class="form-select">
                            <option value="">Alle categorieën</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id" selected="@(Model.SelectedCategoryId == category.Id)">
                                    @category.Name
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Sorteer Filter -->
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-sort"></i> Sorteren op
                        </label>
                        <select name="sortBy" class="form-select">
                            <option value="">Standaard</option>
                            <option value="popular" selected="@(Model.SortBy == "popular")">Populair</option>
                            <option value="new" selected="@(Model.SortBy == "new")">Nieuwste</option>
                            <option value="rtp" selected="@(Model.SortBy == "rtp")">Hoogste RTP</option>
                            <option value="name" selected="@(Model.SortBy == "name")">Naam (A-Z)</option>
                        </select>
                    </div>

                    <!-- Filter Button -->
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter"></i> Filter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Quick Category Filter Pills -->
<div class="section-bg-dark py-3">
    <div class="container">
        <div class="d-flex flex-wrap gap-2 justify-content-center">
            <a asp-action="Index"
               class="btn @(Model.SelectedCategoryId == null ? "btn-primary" : "btn-outline-primary") btn-sm">
                <i class="fas fa-th"></i> Alle Games
            </a>
            @foreach (var category in Model.Categories)
            {
                <a asp-action="Index" asp-route-categoryId="@category.Id"
                   class="btn @(Model.SelectedCategoryId == category.Id ? "btn-primary" : "btn-outline-primary") btn-sm">
                    @if (category.Name == "Slots")
                    {
                        <i class="fas fa-dice"></i>
                    }
                    else if (category.Name == "Roulette")
                    {
                        <i class="fas fa-circle-notch"></i>
                    }
                    else if (category.Name == "Blackjack")
                    {
                        <i class="fas fa-spade"></i>
                    }
                    else if (category.Name == "Live Casino")
                    {
                        <i class="fas fa-video"></i>
                    }
                    else if (category.Name == "Poker")
                    {
                        <i class="fas fa-heart"></i>
                    }
                    else
                    {
                        <i class="fas fa-gamepad"></i>
                    }
                    @category.Name
                </a>
            }
            <a asp-action="Popular" class="btn btn-outline-warning btn-sm">
                <i class="fas fa-fire"></i> Populair
            </a>
            <a asp-action="New" class="btn btn-outline-success btn-sm">
                <i class="fas fa-star"></i> Nieuw
            </a>
        </div>
    </div>
</div>

<!-- Stats Bar -->
@if (Model.SelectedCategoryId.HasValue || !string.IsNullOrEmpty(Model.SearchQuery))
{
    <div class="section-bg-card py-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-light">
                    <i class="fas fa-filter"></i>
                    @if (Model.SelectedCategoryId.HasValue)
                    {
                        var selectedCategory = Model.Categories.FirstOrDefault(c => c.Id == Model.SelectedCategoryId);
                        <span>Categorie: <strong class="text-gold">@selectedCategory?.Name</strong></span>
                    }
                    @if (!string.IsNullOrEmpty(Model.SearchQuery))
                    {
                        <span class="ms-3">Zoekterm: <strong class="text-gold">"@Model.SearchQuery"</strong></span>
                    }
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-times"></i> Filters wissen
                </a>
            </div>
        </div>
    </div>
}

<!-- Games Grid -->
<div class="section-bg-dark py-5">
    <div class="container">
        @if (Model.Games.Any())
        {
            <!-- Results Count -->
            <div class="mb-4 text-center">
                <h5 class="text-light">
                    <i class="fas fa-check-circle text-success"></i>
                    <strong class="text-gold" id="gameCount">@Model.Games.Count</strong> games gevonden
                </h5>
            </div>

            <!-- Game Cards Grid -->
            <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-4" id="gamesContainer">
                @foreach (var game in Model.Games)
                {
                    <div class="col game-card-wrapper">
                        <div class="game-card position-relative">
                            <!-- Badges -->
                            @if (game.IsNew)
                            {
                                <span class="badge-exclusive badge-new">NEW</span>
                            }
                            else if (game.IsPopular)
                            {
                                <span class="badge-exclusive badge-hot">HOT</span>
                            }

                            <!-- Game Image -->
                            <img src="@game.ThumbnailUrl" class="w-100" alt="@game.Name"
                                 onerror="this.src='/images/placeholder-game.jpg'" />

                            <!-- Game Info -->
                            <div class="card-body">
                                <h5 class="card-title text-truncate" title="@game.Name">@game.Name</h5>
                                <p class="card-text text-muted small mb-2">
                                    <i class="fas fa-building"></i> @game.Provider.Name
                                </p>

                                <!-- Game Stats -->
                                <div class="row g-2 mb-3 small">
                                    <div class="col-6">
                                        <div class="text-muted">
                                            <i class="fas fa-percentage text-gold"></i>
                                            RTP: <strong>@game.RtpPercentage%</strong>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="text-muted">
                                            <i class="fas fa-play text-success"></i>
                                            <strong>@game.PlayCount</strong>
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2">
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        <a asp-action="Play" asp-route-id="@game.Id"
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-play"></i> Speel Nu
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Login"
                                           asp-route-returnUrl="@Url.Action("Play", new { id = game.Id })"
                                           class="btn btn-success btn-sm">
                                            <i class="fas fa-sign-in-alt"></i> Login
                                        </a>
                                    }
                                    <a asp-action="Details" asp-route-id="@game.Id"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Load More Button -->
            <div class="row mt-5">
                <div class="col-12 text-center">
                    <button id="loadMoreBtn" class="btn btn-primary btn-lg" style="display: none;">
                        <i class="fas fa-spinner fa-spin"></i> Meer Games Laden
                    </button>
                </div>
            </div>
        }
        else
        {
            <!-- No Results -->
            <div class="row mt-5">
                <div class="col-12 text-center py-5">
                    <i class="fas fa-search fa-5x text-muted mb-4" style="opacity: 0.3;"></i>
                    <h3 class="text-light mb-3">Geen games gevonden</h3>
                    <p class="text-muted mb-4">
                        Probeer een andere zoekopdracht of filter combinatie.
                    </p>
                    <a asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-redo"></i> Reset Filters
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Promotion Banner -->
<div class="section-bg-card py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="text-white mb-3">
                    <i class="fas fa-gift text-gold"></i> Mis geen enkele promotie!
                </h2>
                <p class="text-light lead mb-0">
                    Registreer nu en ontvang exclusieve bonussen en promoties direct in je inbox.
                </p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                @if (User.Identity?.IsAuthenticated != true)
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-promo btn-lg">
                        <i class="fas fa-user-plus"></i> REGISTREER NU
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* ============ AJAX LIVE SEARCH STYLES ============ */
        .search-results {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: var(--card-bg);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-top: none;
            border-radius: 0 0 5px 5px;
            max-height: 400px;
            overflow-y: auto;
            z-index: 1000;
            display: none;
        }

        .search-results.active {
            display: block;
        }

        .search-result-item {
            padding: 10px 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: background 0.2s;
        }

            .search-result-item:hover {
                background: rgba(255, 255, 255, 0.08);
            }

        .search-result-item img {
            width: 40px;
            height: 40px;
            border-radius: 5px;
            object-fit: cover;
        }

        .search-result-info {
            flex: 1;
            min-width: 0;
        }

        .search-result-name {
            font-weight: bold;
            color: white;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .search-result-provider {
            font-size: 0.85rem;
            color: var(--text-muted);
        }

        .search-no-results {
            padding: 20px;
            text-align: center;
            color: var(--text-muted);
        }

        .search-loading {
            padding: 15px;
            text-align: center;
            color: var(--text-muted);
        }

        /* Game card stagger animation */
        .game-card {
            animation: fadeInUp 0.6s ease-out;
            animation-fill-mode: both;
        }

            .game-card:nth-child(n+1) {
                animation-delay: 0.05s;
            }

            .game-card:nth-child(n+6) {
                animation-delay: 0.1s;
            }

            .game-card:nth-child(n+11) {
                animation-delay: 0.15s;
            }

            .game-card:nth-child(n+16) {
                animation-delay: 0.2s;
            }

        /* Filter card hover effect */
        .card {
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 40px rgba(255, 215, 0, 0.2);
            }
    </style>
}

@section Scripts {
    <script>
        // ============ AJAX: LIVE SEARCH ============
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');
        let searchTimeout;

        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            const query = this.value.trim();

            if (query.length < 2) {
                searchResults.classList.remove('active');
                return;
            }

            // Toon loading indicator
            searchResults.innerHTML = '<div class="search-loading"><i class="fas fa-spinner fa-spin"></i> Zoeken...</div>';
            searchResults.classList.add('active');

            // Debounce: wacht 300ms na laatste invoer
            searchTimeout = setTimeout(() => {
                performSearch(query);
            }, 300);
        });

        async function performSearch(query) {
            try {
                const response = await fetch(`/Games/Search?q=${encodeURIComponent(query)}`);
                const result = await response.json();

                if (!result.success) {
                    searchResults.innerHTML = '<div class="search-no-results">❌ Zoeken mislukt</div>';
                    return;
                }

                if (result.data.length === 0) {
                    searchResults.innerHTML = '<div class="search-no-results"><i class="fas fa-search"></i> Geen games gevonden</div>';
                    return;
                }

                // Bouw HTML van resultaten
                let html = '';
                result.data.forEach(game => {
                    html += `
                        <div class="search-result-item" onclick="window.location.href='/Games/Details/${game.id}'">
                            <img src="${game.thumbnail}" alt="${game.name}" onerror="this.src='/images/placeholder-game.jpg'" />
                            <div class="search-result-info">
                                <div class="search-result-name">${game.name}</div>
                                <div class="search-result-provider">
                                    <i class="fas fa-building"></i> ${game.provider}
                                    <span style="margin-left: 5px;"><i class="fas fa-percentage"></i> ${game.rtp}%</span>
                                </div>
                            </div>
                        </div>
                    `;
                });

                searchResults.innerHTML = html;
                searchResults.classList.add('active');

                console.log(`✅ Live Search | Found ${result.data.length} results for: "${query}"`);
            } catch (error) {
                console.error('❌ Search error:', error);
                searchResults.innerHTML = '<div class="search-no-results">❌ Zoeken mislukt</div>';
            }
        }

        // Sluit search results bij klik buiten
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.position-relative')) {
                searchResults.classList.remove('active');
            }
        });

        // ============ AJAX: CATEGORY FILTER ============
        document.getElementById('categoryFilter').addEventListener('change', async function() {
            const categoryId = this.value;

            if (!categoryId) {
                // Reset naar alle games
                window.location.href = '/Games/Index';
                return;
            }

            // Submit form via Ajax
            const form = document.getElementById('filterForm');
            const formData = new FormData(form);

            try {
                console.log(`🎮 Filter Category | CategoryId: ${categoryId}`);
                form.submit(); // Laat form normaal submitten voor nu
            } catch (error) {
                console.error('❌ Filter error:', error);
            }
        });
    </script>
}
