@{
    ViewData["Title"] = SharedLocalizer["Contact"];
}

<!-- Hero Section -->
<div class="hero-section text-white">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-12 text-center fade-in-up">
                <h1 class="display-3 fw-bold mb-4">
                    <i class="fas fa-headset text-info"></i> @SharedLocalizer["Contact"]
                </h1>
                <p class="lead mb-5" style="font-size: 1.4rem; max-width: 800px; margin: 0 auto;">
                    @SharedLocalizer["ContactHaveQuestions"]
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Contact Methodes -->
<div class="section-bg-dark">
    <div class="container py-5">
        <div class="row g-4">
            <!-- Live Chat -->
            <div class="col-md-4">
                <div class="card h-100 shadow-lg text-center">
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <i class="fas fa-comments fa-4x text-primary"></i>
                        </div>
                        <h4 class="text-white mb-3">@SharedLocalizer["LiveChat"]</h4>
                        <p class="text-white-50 mb-4">
                            @SharedLocalizer["ContactDirectWithStaff"]
                        </p>
                        <div class="mb-3">
                            <p class="text-gold mb-1"><i class="fas fa-clock"></i> @SharedLocalizer["Available"]</p>
                            <p class="text-white-50 small mb-0">@SharedLocalizer["24HourAvailable"]</p>
                        </div>
                        <button class="btn btn-primary btn-lg w-100" onclick="alert('@SharedLocalizer["LiveChatComingSoon"]')">
                            <i class="fas fa-comment-dots"></i> @SharedLocalizer["StartChat"]
                        </button>
                    </div>
                </div>
            </div>

            <!-- Email -->
            <div class="col-md-4">
                <div class="card h-100 shadow-lg text-center">
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <i class="fas fa-envelope fa-4x text-success"></i>
                        </div>
                        <h4 class="text-white mb-3">@SharedLocalizer["Email"]</h4>
                        <p class="text-white-50 mb-4">
                            @SharedLocalizer["SendEmailResponse"]
                        </p>
                        <div class="mb-3">
                            <p class="text-gold mb-2"><i class="fas fa-at"></i> @SharedLocalizer["EmailAddresses"]</p>
                            <p class="text-white small mb-1">
                                <strong>@SharedLocalizer["General"]:</strong><br />
                                <a href="mailto:info@safecasino.be" class="text-info">info@safecasino.be</a>
                            </p>
                            <p class="text-white small mb-1">
                                <strong>@SharedLocalizer["Support"]:</strong><br />
                                <a href="mailto:support@safecasino.be" class="text-info">support@safecasino.be</a>
                            </p>
                            <p class="text-white small mb-0">
                                <strong>VIP:</strong><br />
                                <a href="mailto:vip@safecasino.be" class="text-info">vip@safecasino.be</a>
                            </p>
                        </div>
                        <a href="mailto:support@safecasino.be" class="btn btn-success btn-lg w-100">
                            <i class="fas fa-paper-plane"></i> @SharedLocalizer["SendEmail"]
                        </a>
                    </div>
                </div>
            </div>

            <!-- Telefoon -->
            <div class="col-md-4">
                <div class="card h-100 shadow-lg text-center">
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <i class="fas fa-phone fa-4x text-warning"></i>
                        </div>
                        <h4 class="text-white mb-3">@SharedLocalizer["Phone"]</h4>
                        <p class="text-white-50 mb-4">
                            @SharedLocalizer["CallDirectSupport"]
                        </p>
                        <div class="mb-3">
                            <p class="text-gold mb-1"><i class="fas fa-phone-alt"></i> @SharedLocalizer["PhoneNumber"]</p>
                            <p class="text-white h5 mb-2">
                                <a href="tel:+3221234567" class="text-white">+32 2 123 45 67</a>
                            </p>
                            <p class="text-white-50 small mb-1"><i class="fas fa-clock"></i> @SharedLocalizer["MondayFriday"]: 09:00 - 21:00</p>
                            <p class="text-white-50 small mb-0">@SharedLocalizer["SaturdaySunday"]: 10:00 - 18:00</p>
                        </div>
                        <a href="tel:+3221234567" class="btn btn-warning btn-lg w-100">
                            <i class="fas fa-phone-alt"></i> @SharedLocalizer["CallUs"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Formulier -->
<div class="section-bg-card">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow-lg">
                    <div class="card-header" style="background: linear-gradient(135deg, var(--secondary-purple) 0%, var(--accent-purple) 100%);">
                        <h3 class="mb-0 text-white">
                            <i class="fas fa-envelope-open-text"></i> @SharedLocalizer["SendUsMessage"]
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <form id="contactForm">
                            <div class="row g-3">
                                <!-- Naam -->
                                <div class="col-md-6">
                                    <label class="form-label text-white">
                                        <i class="fas fa-user"></i> @SharedLocalizer["Name"] *
                                    </label>
                                    <input type="text" class="form-control" placeholder="@SharedLocalizer["YourFullName"]" required>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6">
                                    <label class="form-label text-white">
                                        <i class="fas fa-envelope"></i> @SharedLocalizer["Email"] *
                                    </label>
                                    <input type="email" class="form-control" placeholder="you@email.com" required>
                                </div>

                                <!-- Onderwerp -->
                                <div class="col-12">
                                    <label class="form-label text-white">
                                        <i class="fas fa-tag"></i> @SharedLocalizer["Subject"] *
                                    </label>
                                    <select class="form-select" required>
                                        <option value="">@SharedLocalizer["SelectTopic"]</option>
                                        <option value="account">@SharedLocalizer["AccountRegistration"]</option>
                                        <option value="deposit">@SharedLocalizer["DepositsWithdrawals"]</option>
                                        <option value="game">@SharedLocalizer["GamesRules"]</option>
                                        <option value="bonus">@SharedLocalizer["BonusesPromotions"]</option>
                                        <option value="technical">@SharedLocalizer["TechnicalProblems"]</option>
                                        <option value="complaint">@SharedLocalizer["Complaint"]</option>
                                        <option value="other">@SharedLocalizer["Other"]</option>
                                    </select>
                                </div>

                                <!-- Bericht -->
                                <div class="col-12">
                                    <label class="form-label text-white">
                                        <i class="fas fa-comment-alt"></i> @SharedLocalizer["Message"] *
                                    </label>
                                    <textarea class="form-control" rows="6"
                                              placeholder="@SharedLocalizer["DescribeQuestionDetailed"]..."
                                              required></textarea>
                                </div>

                                <!-- Account informatie (optioneel) -->
                                @if (User.Identity?.IsAuthenticated != true)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle"></i>
                                            <strong>@SharedLocalizer["Tip"]:</strong> @SharedLocalizer["LoginTipMessage"]
                                        </div>
                                    </div>
                                }

                                <!-- Submit Button -->
                                <div class="col-12">
                                    <button type="submit" class="btn btn-promo btn-lg w-100">
                                        <i class="fas fa-paper-plane"></i> @SharedLocalizer["SendMessage"]
                                    </button>
                                </div>

                                <div class="col-12">
                                    <p class="text-white-50 small mb-0">
                                        <i class="fas fa-shield-alt text-success"></i>
                                        @SharedLocalizer["DataConfidential"] <a asp-action="Privacy" class="text-gold">@SharedLocalizer["PrivacyPolicy"]</a>.
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

