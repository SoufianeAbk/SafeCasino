<!-- Contact Formulier -->
<div class="section-bg-card">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow-lg">
                    <div class="card-header" style="background: linear-gradient(135deg, var(--secondary-purple) 0%, var(--accent-purple) 100%);">
                        <h3 class="mb-0 text-white">
                            <i class="fas fa-envelope-open-text"></i> Stuur ons een bericht
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <form id="contactForm">
                            <div class="row g-3">
                                <!-- Naam -->
                                <div class="col-md-6">
                                    <label class="form-label text-white">
                                        <i class="fas fa-user"></i> Naam *
                                    </label>
                                    <input type="text" class="form-control" placeholder="Je volledige naam" required>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6">
                                    <label class="form-label text-white">
                                        <i class="fas fa-envelope"></i> E-mail *
                                    </label>
                                    <input type="email" class="form-control" placeholder="je@email.com" required>
                                </div>

                                <!-- Onderwerp -->
                                <div class="col-12">
                                    <label class="form-label text-white">
                                        <i class="fas fa-tag"></i> Onderwerp *
                                    </label>
                                    <select class="form-select" required>
                                        <option value="">Selecteer een onderwerp</option>
                                        <option value="account">Account & Registratie</option>
                                        <option value="deposit">Stortingen & Opnames</option>
                                        <option value="game">Games & Spelregels</option>
                                        <option value="bonus">Bonussen & Promoties</option>
                                        <option value="technical">Technische Problemen</option>
                                        <option value="complaint">Klacht</option>
                                        <option value="other">Anders</option>
                                    </select>
                                </div>

                                <!-- Bericht -->
                                <div class="col-12">
                                    <label class="form-label text-white">
                                        <i class="fas fa-comment-alt"></i> Bericht *
                                    </label>
                                    <textarea class="form-control" rows="6"
                                              placeholder="Beschrijf je vraag of probleem zo gedetailleerd mogelijk..."
                                              required></textarea>
                                </div>

                                <!-- Account informatie (optioneel) -->
                                @if (User.Identity?.IsAuthenticated != true)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle"></i>
                                            <strong>Tip:</strong> Als je bent ingelogd, kunnen we je sneller helpen omdat we je accountgegevens al hebben.
                                        </div>
                                    </div>
                                }

                                <!-- Submit Button -->
                                <div class="col-12">
                                    <button type="submit" class="btn btn-promo btn-lg w-100">
                                        <i class="fas fa-paper-plane"></i> Verstuur Bericht
                                    </button>
                                </div>

                                <div class="col-12">
                                    <p class="text-white-50 small mb-0">
                                        <i class="fas fa-shield-alt text-success"></i>
                                        Jouw gegevens worden vertrouwelijk behandeld conform ons <a asp-action="Privacy" class="text-gold">Privacy Beleid</a>.
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

