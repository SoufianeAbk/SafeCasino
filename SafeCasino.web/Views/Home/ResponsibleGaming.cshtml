@{
    ViewData["Title"] = @SharedLocalizer["ResponsibleGamingTitle"];
}

<!-- Hero Section -->
<div class="hero-section text-white">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-12 text-center fade-in-up">
                <h1 class="display-3 fw-bold mb-4">
                    <i class="fas fa-heart text-danger"></i> @SharedLocalizer["ResponsibleGaming"]
                </h1>
                <p class="lead mb-5" style="font-size: 1.4rem; max-width: 800px; margin: 0 auto;">
                    @SharedLocalizer["ResponsibleGamingSubtitle"]
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Belangrijk Bericht -->
<div class="section-bg-dark">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="alert alert-warning border-warning" role="alert" style="border-width: 3px;">
                    <h4 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i> @SharedLocalizer["Important"]
                    </h4>
                    <p class="mb-0">
                        <strong>@SharedLocalizer["GamblingCanBeAddictive"]</strong> @SharedLocalizer["ResponsibleGamingMessage"]
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Wat is Verantwoord Gokken -->
<div class="section-bg-card">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow-lg">
                    <div class="card-header text-center" style="background: linear-gradient(135deg, var(--secondary-purple) 0%, var(--accent-purple) 100%);">
                        <h2 class="text-white mb-0">
                            <i class="fas fa-question-circle"></i> @SharedLocalizer["WhatIsResponsibleGambling"]
                        </h2>
                    </div>
                    <div class="card-body">
                        <p class="text-white lead mb-4">
                            @SharedLocalizer["ResponsibleGamblingDescription"]
                        </p>
                        <ul class="text-white-50">
                            <li class="mb-3">@Html.Raw(SharedLocalizer["ResponsibleGamblingTip1"])</li>
                            <li class="mb-3">@Html.Raw(SharedLocalizer["ResponsibleGamblingTip2"])</li>
                            <li class="mb-3">@Html.Raw(SharedLocalizer["ResponsibleGamblingTip3"])</li>
                            <li class="mb-3">@Html.Raw(SharedLocalizer["ResponsibleGamblingTip4"])</li>
                            <li class="mb-3">@Html.Raw(SharedLocalizer["ResponsibleGamblingTip5"])</li>
                            <li class="mb-3">@Html.Raw(SharedLocalizer["ResponsibleGamblingTip6"])</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Waarschuwingssignalen -->
<div class="section-bg-dark">
    <div class="container py-5">
        <h2 class="text-center section-title mb-5">
            <i class="fas fa-exclamation-triangle text-warning"></i> @SharedLocalizer["WarningSignals"]
        </h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 border-warning" style="border-width: 2px;">
                    <div class="card-body">
                        <h4 class="text-warning mb-3">
                            <i class="fas fa-check-circle"></i> @SharedLocalizer["WatchForTheseSignals"]
                        </h4>
                        <ul class="text-white-50 mb-0">
                            <li class="mb-2">@SharedLocalizer["WarningSignal1"]</li>
                            <li class="mb-2">@SharedLocalizer["WarningSignal2"]</li>
                            <li class="mb-2">@SharedLocalizer["WarningSignal3"]</li>
                            <li class="mb-2">@SharedLocalizer["WarningSignal4"]</li>
                            <li class="mb-2">@SharedLocalizer["WarningSignal5"]</li>
                            <li class="mb-2">@SharedLocalizer["WarningSignal6"]</li>
                            <li class="mb-2">@SharedLocalizer["WarningSignal7"]</li>
                            <li class="mb-2">@SharedLocalizer["WarningSignal8"]</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 border-danger" style="border-width: 2px;">
                    <div class="card-body">
                        <h4 class="text-danger mb-3">
                            <i class="fas fa-ban"></i> @SharedLocalizer["RecognizeTheseSignals"]
                        </h4>
                        <p class="text-white mb-3">
                            @SharedLocalizer["RecognizeSignalsMessage"]
                        </p>
                        <div class="alert alert-danger mb-3">
                            <strong>@SharedLocalizer["ImportantStep"]:</strong> @SharedLocalizer["AcknowledgeAndSeekHelp"]
                        </div>
                        <a href="#hulp" class="btn btn-danger w-100">
                            <i class="fas fa-life-ring"></i> @SharedLocalizer["ViewHelpOptions"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hulpmiddelen bij SafeCasino -->
<div class="section-bg-card">
    <div class="container py-5">
        <h2 class="text-center section-title mb-5">
            <i class="fas fa-tools text-info"></i> @SharedLocalizer["OurTools"]
        </h2>
        <div class="row g-4">
            <!-- Inzet Limieten -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-hand-holding-usd fa-3x text-success mb-3"></i>
                        <h5 class="text-white mb-3">@SharedLocalizer["BettingLimits"]</h5>
                        <p class="text-white-50 small mb-3">
                            @SharedLocalizer["BettingLimitsDescription"]
                        </p>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Account" asp-action="Profile" class="btn btn-sm btn-outline-primary">
                                @SharedLocalizer["SetLimit"]
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Verlies Limieten -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-chart-line fa-3x text-warning mb-3"></i>
                        <h5 class="text-white mb-3">@SharedLocalizer["LossLimits"]</h5>
                        <p class="text-white-50 small mb-3">
                            @SharedLocalizer["LossLimitsDescription"]
                        </p>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Account" asp-action="Profile" class="btn btn-sm btn-outline-primary">
                                @SharedLocalizer["SetLimit"]
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Sessie Limieten -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-clock fa-3x text-info mb-3"></i>
                        <h5 class="text-white mb-3">@SharedLocalizer["SessionLimits"]</h5>
                        <p class="text-white-50 small mb-3">
                            @SharedLocalizer["SessionLimitsDescription"]
                        </p>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Account" asp-action="Profile" class="btn btn-sm btn-outline-primary">
                                @SharedLocalizer["SetLimit"]
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Zelf-Uitsluiting -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-ban fa-3x text-danger mb-3"></i>
                        <h5 class="text-white mb-3">@SharedLocalizer["SelfExclusion"]</h5>
                        <p class="text-white-50 small mb-3">
                            @SharedLocalizer["SelfExclusionDescription"]
                        </p>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Account" asp-action="Profile" class="btn btn-sm btn-outline-danger">
                                @SharedLocalizer["MoreInfo"]
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Professionele Hulp -->
<div class="section-bg-dark" id="hulp">
    <div class="container py-5">
        <h2 class="text-center section-title mb-5">
            <i class="fas fa-life-ring text-danger"></i> @SharedLocalizer["ProfessionalHelp"]
        </h2>
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="text-white mb-4">
                            <i class="fas fa-phone-alt text-success"></i> @SharedLocalizer["HelplinesBelgium"]
                        </h4>
                        <div class="mb-4">
                            <h6 class="text-gold">@SharedLocalizer["TeleOnthaal"]</h6>
                            <p class="text-white-50 mb-1">
                                <i class="fas fa-phone"></i> <strong class="text-white">106</strong> (@SharedLocalizer["FreeTwentyFourSeven"])
                            </p>
                            <p class="text-white-50 small mb-0">
                                @SharedLocalizer["TeleOnthaalDescription"]
                            </p>
                        </div>
                        <div class="mb-4">
                            <h6 class="text-gold">@SharedLocalizer["DeDruglijn"]</h6>
                            <p class="text-white-50 mb-1">
                                <i class="fas fa-phone"></i> <strong class="text-white">078 15 10 20</strong>
                            </p>
                            <p class="text-white-50 small mb-0">
                                @SharedLocalizer["DeDruglijnDescription"]
                            </p>
                        </div>
                        <div>
                            <h6 class="text-gold">@SharedLocalizer["CAD"]</h6>
                            <p class="text-white-50 mb-1">
                                @SharedLocalizer["CADLocations"]
                            </p>
                            <p class="text-white-50 small mb-0">
                                @SharedLocalizer["CADDescription"]
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="text-white mb-4">
                            <i class="fas fa-globe text-info"></i> @SharedLocalizer["OnlineHelpInfo"]
                        </h4>
                        <div class="mb-4">
                            <h6 class="text-gold">@SharedLocalizer["GamCare"]</h6>
                            <p class="text-white-50 mb-1">
                                <i class="fas fa-link"></i> <a href="https://www.gamcare.org.uk" target="_blank" class="text-white">www.gamcare.org.uk</a>
                            </p>
                            <p class="text-white-50 small mb-0">
                                @SharedLocalizer["GamCareDescription"]
                            </p>
                        </div>
                        <div class="mb-4">
                            <h6 class="text-gold">@SharedLocalizer["GamblersAnonymous"]</h6>
                            <p class="text-white-50 mb-1">
                                <i class="fas fa-link"></i> <a href="https://www.gamblersanonymous.org" target="_blank" class="text-white">www.gamblersanonymous.org</a>
                            </p>
                            <p class="text-white-50 small mb-0">
                                @SharedLocalizer["GamblersAnonymousDescription"]
                            </p>
                        </div>
                        <div>
                            <h6 class="text-gold">@SharedLocalizer["BeGambleAware"]</h6>
                            <p class="text-white-50 mb-1">
                                <i class="fas fa-link"></i> <a href="https://www.begambleaware.org" target="_blank" class="text-white">www.begambleaware.org</a>
                            </p>
                            <p class="text-white-50 small mb-0">
                                @SharedLocalizer["BeGambleAwareDescription"]
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Extra Opties -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-info">
                    <h5 class="alert-heading">
                        <i class="fas fa-info-circle"></i> @SharedLocalizer["NeedMoreHelp"]
                    </h5>
                    <p class="mb-0">
                        @Html.Raw(SharedLocalizer["SupportTeamMessage"])
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tips voor Familie en Vrienden -->
<div class="section-bg-card">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow-lg">
                    <div class="card-header text-center" style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);">
                        <h2 class="text-white mb-0">
                            <i class="fas fa-users"></i> @SharedLocalizer["ForFamilyAndFriends"]
                        </h2>
                    </div>
                    <div class="card-body">
                        <p class="text-white lead mb-3">
                            @SharedLocalizer["WorriedAboutSomeone"]
                        </p>
                        <ul class="text-white-50 mb-4">
                            <li class="mb-2">@SharedLocalizer["FamilyTip1"]</li>
                            <li class="mb-2">@SharedLocalizer["FamilyTip2"]</li>
                            <li class="mb-2">@SharedLocalizer["FamilyTip3"]</li>
                            <li class="mb-2">@SharedLocalizer["FamilyTip4"]</li>
                            <li class="mb-2">@SharedLocalizer["FamilyTip5"]</li>
                        </ul>
                        <div class="alert alert-warning mb-0">
                            <strong>@SharedLocalizer["Note"]:</strong> @SharedLocalizer["FamilyNote"]
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA -->
<div class="section-bg-dark">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="text-white display-5 fw-bold mb-4">
                    @SharedLocalizer["PlayResponsiblyPlaySafely"]
                </h2>
                <p class="text-white-50 lead mb-4">
                    @SharedLocalizer["YourWellbeingFirst"]
                </p>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Account" asp-action="Profile" class="btn btn-promo btn-lg px-5">
                        <i class="fas fa-cog"></i> @SharedLocalizer["ManageMyLimits"]
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-promo btn-lg px-5">
                        <i class="fas fa-user-plus"></i> @SharedLocalizer["RegisterResponsibly"]
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: 2px solid rgba(255, 255, 255, 0.1);
        }

        .card-body a {
            color: var(--gold-accent);
            text-decoration: none;
        }

            .card-body a:hover {
                text-decoration: underline;
            }
    </style>
}