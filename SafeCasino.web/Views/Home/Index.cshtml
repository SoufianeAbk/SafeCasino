@{
    ViewData["Title"] = "SafeCasino";
    var popularGames = ViewBag.PopularGames as List<SafeCasino.Data.Entities.CasinoGame>;
    var newGames = ViewBag.NewGames as List<SafeCasino.Data.Entities.CasinoGame>;
    var categories = ViewBag.Categories as List<SafeCasino.Data.Entities.GameCategory>;
}

<!-- Hero Section -->
<div class="hero-section text-white">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-12 text-center fade-in-up">
                <h1 class="display-3 fw-bold mb-4">
                    SAFE CASINO MET DE BESTE GAMES
                </h1>
                <p class="lead mb-5" style="font-size: 1.4rem; max-width: 800px; margin: 0 auto;">
                    Ontdek de meest uitgebreide collectie casino games van de beste providers.
                    Speel veilig, verantwoord en geniet van de hoogste RTP percentages.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Promotional Banners -->
<div class="section-bg-dark">
    <div class="container py-5">
        <div class="row g-4">
            <!-- Daily Boost Promo -->
            <div class="col-lg-4">
                <div class="promo-banner" style="background: linear-gradient(135deg, #e74c3c 20%, #8e44ad 80%);">
                    <span class="promo-label">DAILY BOOST</span>
                    <h2 class="promo-title">TOT €10</h2>
                    <p class="promo-subtitle">
                        Speel & win 10 keer<br />
                        Ontvang 25% cashback
                    </p>
                    <a asp-controller="Games" asp-action="Index" class="btn btn-promo">
                        SPEEL NU
                    </a>
                </div>
            </div>

            <!-- Tournament Promo -->
            <div class="col-lg-4">
                <div class="promo-banner" style="background: linear-gradient(135deg, #e91e63 20%, #9c27b0 80%);">
                    <span class="promo-label">ANIMAL TOURNAMENT</span>
                    <h2 class="promo-title">€30000<small style="font-size: 0.5em;"> DAILY</small></h2>
                    <p class="promo-subtitle">
                        Haal je deel uit de<br />
                        dagelijkse prijzenpot
                    </p>
                    <a asp-controller="Home" asp-action="TournamentInfo" class="btn btn-promo">
                        MEER INFO
                    </a>
                </div>
            </div>

            <!-- Live Crash Game Promo -->
            <div class="col-lg-4">
                <div class="promo-banner" style="background: linear-gradient(135deg, #ff6b6b 20%, #4ecdc4 80%);">
                    <span class="promo-label">LIVE CRASH GAME</span>
                    <h2 class="promo-title">JE WINS ZIJN<br /><small style="font-size: 0.7em;">KLAAR VOOR</small><br />TAKEOFF</h2>
                    <a asp-controller="Games" asp-action="Index" class="btn btn-promo">
                        SPEEL NU
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Category Icons Row -->
<div class="section-bg-card">
    <div class="container py-4">
        <div class="row g-4 justify-content-center">
            <div class="col-6 col-md-2">
                <a asp-controller="Games" asp-action="Index" class="text-decoration-none">
                    <div class="category-icon-wrapper">
                        <div class="category-icon">
                            <i class="fas fa-rocket"></i>
                        </div>
                        <div class="category-label">Daily Boost</div>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-2">
                <a asp-controller="Games" asp-action="Popular" class="text-decoration-none">
                    <div class="category-icon-wrapper">
                        <div class="category-icon">
                            <i class="fas fa-trophy"></i>
                        </div>
                        <div class="category-label">Tournament</div>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-2">
                <a asp-controller="Games" asp-action="New" class="text-decoration-none">
                    <div class="category-icon-wrapper">
                        <div class="category-icon">
                            <i class="fas fa-sync-alt"></i>
                        </div>
                        <div class="category-label">Daily Spin</div>
                        <span class="badge bg-danger position-absolute" style="top: 0; right: 30%;">FREE</span>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-2">
                <a asp-controller="Games" asp-action="Index" class="text-decoration-none">
                    <div class="category-icon-wrapper">
                        <div class="category-icon">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <div class="category-label">Coin Shop</div>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-2">
                <a asp-controller="Games" asp-action="Index" class="text-decoration-none">
                    <div class="category-icon-wrapper">
                        <div class="category-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="category-label">Providers</div>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-2">
                <a asp-controller="Games" asp-action="Index" class="text-decoration-none">
                    <div class="category-icon-wrapper">
                        <div class="category-icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="category-label">Exclusives</div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Second Row -->
        <div class="row g-4 justify-content-center mt-2">
            @if (categories != null && categories.Any())
            {
                @foreach (var category in categories.Take(6))
                {
                    <div class="col-6 col-md-2">
                        <a asp-controller="Games" asp-action="Category" asp-route-id="@category.Id" class="text-decoration-none">
                            <div class="category-icon-wrapper">
                                <div class="category-icon">
                                    @if (category.Name == "Blackjack")
                                    {
                                        <i class="fas fa-spade"></i>
                                    }
                                    else if (category.Name == "Roulette")
                                    {
                                        <i class="fas fa-circle-notch"></i>
                                    }
                                    else if (category.Name == "Slots")
                                    {
                                        <i class="fas fa-dice"></i>
                                    }
                                    else if (category.Name == "Poker")
                                    {
                                        <i class="fas fa-heart"></i>
                                    }
                                    else if (category.Name == "Live Casino")
                                    {
                                        <i class="fas fa-video"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-gamepad"></i>
                                    }
                                </div>
                                <div class="category-label">@category.Name</div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Only at SafeCasino - Exclusive Games -->
@if (newGames != null && newGames.Any())
{
    <div class="section-bg-dark">
        <div class="container py-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="section-title">
                        <i class="fas fa-crown text-gold"></i> ALLEEN BIJ SAFECASINO
                    </h2>
                </div>
                <a asp-controller="Games" asp-action="New" class="btn btn-outline-primary">
                    Bekijk alles <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>

            <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-4">
                @foreach (var game in newGames.Take(10))
                {
                    <div class="col">
                        <div class="game-card position-relative">
                            <span class="badge-exclusive">EXCLUSIVE</span>
                            <img src="@game.ThumbnailUrl" class="w-100" alt="@game.Name"
                                 onerror="this.src='/images/placeholder-game.jpg'" />
                            <div class="card-body">
                                <h5 class="card-title text-truncate">@game.Name</h5>
                                <p class="card-text text-muted small mb-2">
                                    <i class="fas fa-building"></i> @game.Provider.Name
                                </p>
                                <div class="d-grid">
                                    <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id"
                                       class="btn btn-primary btn-sm">
                                        <i class="fas fa-play"></i> Speel Nu
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Popular Games Section -->
@if (popularGames != null && popularGames.Any())
{
    <div class="section-bg-card">
        <div class="container py-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="section-title">
                        <i class="fas fa-fire text-danger"></i> POPULAIRE GAMES
                    </h2>
                </div>
                <a asp-controller="Games" asp-action="Popular" class="btn btn-outline-primary">
                    Bekijk alles <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>

            <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-4">
                @foreach (var game in popularGames.Take(10))
                {
                    <div class="col">
                        <div class="game-card position-relative">
                            @if (game.IsPopular)
                            {
                                <span class="badge-exclusive badge-hot">HOT</span>
                            }
                            <img src="@game.ThumbnailUrl" class="w-100" alt="@game.Name"
                                 onerror="this.src='/images/placeholder-game.jpg'" />
                            <div class="card-body">
                                <h5 class="card-title text-truncate">@game.Name</h5>
                                <p class="card-text text-muted small mb-2">
                                    <i class="fas fa-percentage"></i> RTP: @game.RtpPercentage%
                                </p>
                                <div class="d-grid">
                                    <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id"
                                       class="btn btn-primary btn-sm">
                                        <i class="fas fa-play"></i> Speel Nu
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Tournaments Section -->
<div class="section-bg-dark">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <i class="fas fa-trophy" style="font-size: 5rem; color: var(--gold-accent);"></i>
            </div>
            <div class="col-md-8">
                <h2 class="section-title mb-3">
                    <i class="fas fa-medal text-gold"></i> TOURNAMENTS
                </h2>
                <p class="lead text-light mb-0">
                    Doe mee aan onze spannende toernooien en win geweldige prijzen!
                    Dagelijkse prijzenpotten tot €30,000.
                </p>
            </div>
            <div class="col-md-2 text-center">
                <a asp-controller="Games" asp-action="Index" class="btn btn-promo btn-lg">
                    BEKIJK ALLES
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="section-bg-card">
    <div class="container py-5">
        <h2 class="text-center section-title mb-5">WAAROM SAFECASINO?</h2>
        <div class="row row-cols-1 row-cols-md-4 g-4 text-center">
            <div class="col">
                <div class="feature-icon mb-3">
                    <i class="fas fa-shield-alt fa-4x text-success"></i>
                </div>
                <h4 class="text-white">100% Veilig</h4>
                <p class="text-muted">SSL encryptie en veilige betalingen voor jouw gemoedsrust</p>
            </div>
            <div class="col">
                <div class="feature-icon mb-3">
                    <i class="fas fa-star fa-4x text-warning"></i>
                </div>
                <h4 class="text-white">Top Games</h4>
                <p class="text-muted">Exclusieve games van de beste providers wereldwijd</p>
            </div>
            <div class="col">
                <div class="feature-icon mb-3">
                    <i class="fas fa-headset fa-4x text-info"></i>
                </div>
                <h4 class="text-white">24/7 Support</h4>
                <p class="text-muted">Altijd bereikbaar voor al je vragen en ondersteuning</p>
            </div>
            <div class="col">
                <div class="feature-icon mb-3">
                    <i class="fas fa-percentage fa-4x text-gold"></i>
                </div>
                <h4 class="text-white">Beste RTP</h4>
                <p class="text-muted">Hoogste uitkeringspercentages in de industrie</p>
            </div>
        </div>
    </div>
</div>

<!-- Trust Badges -->
<div class="section-bg-dark py-4">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-2">
                <div class="text-gold">
                    <i class="fas fa-lock fa-3x mb-2"></i>
                    <p class="small text-light mb-0">SSL Beveiligd</p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="text-gold">
                    <i class="fas fa-check-circle fa-3x mb-2"></i>
                    <p class="small text-light mb-0">Vergunde Casino</p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="text-gold">
                    <i class="fas fa-users fa-3x mb-2"></i>
                    <p class="small text-light mb-0">10K+ Spelers</p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="text-gold">
                    <i class="fas fa-gamepad fa-3x mb-2"></i>
                    <p class="small text-light mb-0">9000+ Games</p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="text-gold">
                    <i class="fas fa-award fa-3x mb-2"></i>
                    <p class="small text-light mb-0">Beste RTP</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Extra animaties voor deze pagina */
        .game-card {
            animation: fadeInUp 0.6s ease-out;
            animation-fill-mode: both;
        }

            .game-card:nth-child(1) {
                animation-delay: 0.1s;
            }

            .game-card:nth-child(2) {
                animation-delay: 0.2s;
            }

            .game-card:nth-child(3) {
                animation-delay: 0.3s;
            }

            .game-card:nth-child(4) {
                animation-delay: 0.4s;
            }

            .game-card:nth-child(5) {
                animation-delay: 0.5s;
            }

        .feature-icon i {
            transition: transform 0.3s ease;
        }

        .feature-icon:hover i {
            transform: scale(1.2) rotate(5deg);
        }
    </style>
}
