@{
    ViewData["Title"] = SharedLocalizer["PrivacyPolicy"];
}

<!-- Hero Section -->
<div class="hero-section text-white">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-12 text-center fade-in-up">
                <h1 class="display-3 fw-bold mb-4">
                    <i class="fas fa-shield-alt text-success"></i> @SharedLocalizer["PrivacyPolicy"]
                </h1>
                <p class="lead mb-5" style="font-size: 1.4rem; max-width: 800px; margin: 0 auto;">
                    @SharedLocalizer["PrivacyImportant"]
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Introductie -->
<div class="section-bg-dark">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <p class="text-white lead mb-3">
                            @SharedLocalizer["LastUpdated"]: <strong class="text-gold">19 @SharedLocalizer["DecemberMonthName"] 2025</strong>
                        </p>
                        <p class="text-white-50 mb-3">
                            @SharedLocalizer["PrivacyIntroduction"]
                        </p>
                        <p class="text-white-50 mb-0">
                            @SharedLocalizer["PrivacyAgree"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Welke informatie verzamelen we -->
<div class="section-bg-card">
    <div class="container py-5">
        <h2 class="section-title mb-4">
            <i class="fas fa-database text-info"></i> 1. @SharedLocalizer["WhatInfoCollect"]
        </h2>
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="text-white mb-3">@SharedLocalizer["PersonalInfo"]</h5>
                        <p class="text-white-50 mb-2">@SharedLocalizer["PersonalInfoDescription"]</p>
                        <ul class="text-white-50">
                            <li>@SharedLocalizer["NameContactDetails"]</li>
                            <li>@SharedLocalizer["BirthdateIDVerification"]</li>
                            <li>@SharedLocalizer["PaymentInfo"]</li>
                            <li>@SharedLocalizer["CustomerServiceComm"]</li>
                        </ul>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="text-white mb-3">@SharedLocalizer["AutomaticInfo"]</h5>
                        <p class="text-white-50 mb-2">@SharedLocalizer["AutomaticInfoDescription"]</p>
                        <ul class="text-white-50">
                            <li>@SharedLocalizer["IPAddressDevice"]</li>
                            <li>@SharedLocalizer["BrowserType"]</li>
                            <li>@SharedLocalizer["PagesVisited"]</li>
                            <li>@SharedLocalizer["CookiesTech"]</li>
                        </ul>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h5 class="text-white mb-3">@SharedLocalizer["GamingBehavior"]</h5>
                        <p class="text-white-50 mb-2">@SharedLocalizer["GamingBehaviorMonitor"]</p>
                        <ul class="text-white-50 mb-0">
                            <li>@SharedLocalizer["PlayHistory"]</li>
                            <li>@SharedLocalizer["DepositsWithdrawals"]</li>
                            <li>@SharedLocalizer["BetsWinnings"]</li>
                            <li>@SharedLocalizer["SessionDuration"]</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hoe gebruiken we je informatie -->
<div class="section-bg-dark">
    <div class="container py-5">
        <h2 class="section-title mb-4">
            <i class="fas fa-cogs text-warning"></i> 2. @SharedLocalizer["HowWeUseInfo"]
        </h2>
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <p class="text-white-50 mb-3">@SharedLocalizer["DataUsedFor"]</p>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="p-3" style="background: rgba(255, 255, 255, 0.05); border-radius: 10px;">
                                    <h6 class="text-gold mb-2">
                                        <i class="fas fa-user-check"></i> @SharedLocalizer["AccountManagement"]
                                    </h6>
                                    <p class="text-white-50 small mb-0">
                                        @SharedLocalizer["AccountVerification"]
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3" style="background: rgba(255, 255, 255, 0.05); border-radius: 10px;">
                                    <h6 class="text-gold mb-2">
                                        <i class="fas fa-gamepad"></i> @SharedLocalizer["ServiceDelivery"]
                                    </h6>
                                    <p class="text-white-50 small mb-0">
                                        @SharedLocalizer["ProvidingCasinoService"]
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3" style="background: rgba(255, 255, 255, 0.05); border-radius: 10px;">
                                    <h6 class="text-gold mb-2">
                                        <i class="fas fa-shield-alt"></i> @SharedLocalizer["Security"]
                                    </h6>
                                    <p class="text-white-50 small mb-0">
                                        @SharedLocalizer["DetectingFraud"]
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3" style="background: rgba(255, 255, 255, 0.05); border-radius: 10px;">
                                    <h6 class="text-gold mb-2">
                                        <i class="fas fa-heart"></i> @SharedLocalizer["ResponsibleGaming"]
                                    </h6>
                                    <p class="text-white-50 small mb-0">
                                        @SharedLocalizer["MonitoringGamingBehavior"]
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3" style="background: rgba(255, 255, 255, 0.05); border-radius: 10px;">
                                    <h6 class="text-gold mb-2">
                                        <i class="fas fa-chart-line"></i> @SharedLocalizer["Improvement"]
                                    </h6>
                                    <p class="text-white-50 small mb-0">
                                        @SharedLocalizer["AnalyzingImprovingServices"]
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3" style="background: rgba(255, 255, 255, 0.05); border-radius: 10px;">
                                    <h6 class="text-gold mb-2">
                                        <i class="fas fa-envelope"></i> @SharedLocalizer["Communication"]
                                    </h6>
                                    <p class="text-white-50 small mb-0">
                                        @SharedLocalizer["SendingUpdatesPromo"]
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delen van informatie -->
<div class="section-bg-card">
    <div class="container py-5">
        <h2 class="section-title mb-4">
            <i class="fas fa-share-alt text-danger"></i> 3. @SharedLocalizer["DoWeShareInfo"]
        </h2>
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <p class="text-white lead mb-4">
                            @SharedLocalizer["NoShareMarketing"]
                        </p>
                        <p class="text-white-50 mb-3">@SharedLocalizer["ShareInfoWith"]</p>
                        <ul class="text-white-50">
                            <li class="mb-2"><strong class="text-white">@SharedLocalizer["PaymentProviders"]:</strong> @SharedLocalizer["ProcessingDeposits"]</li>
                            <li class="mb-2"><strong class="text-white">@SharedLocalizer["GameProviders"]:</strong> @SharedLocalizer["DeliveringGames"]</li>
                            <li class="mb-2"><strong class="text-white">@SharedLocalizer["Authorities"]:</strong> @SharedLocalizer["WhenLegallyRequired"]</li>
                            <li class="mb-2"><strong class="text-white">@SharedLocalizer["ServiceProviders"]:</strong> @SharedLocalizer["WorkingOurBehalf"]</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Jouw rechten -->
<div class="section-bg-dark">
    <div class="container py-5">
        <h2 class="section-title mb-4">
            <i class="fas fa-balance-scale text-success"></i> 4. @SharedLocalizer["YourRights"]
        </h2>
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <p class="text-white-50 mb-3">@SharedLocalizer["GDPRRights"]</p>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <i class="fas fa-eye fa-2x text-info mb-2"></i>
                                    <h6 class="text-white">@SharedLocalizer["RightToAccess"]</h6>
                                    <p class="text-white-50 small mb-0">@SharedLocalizer["ViewYourData"]</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <i class="fas fa-edit fa-2x text-warning mb-2"></i>
                                    <h6 class="text-white">@SharedLocalizer["RightToCorrect"]</h6>
                                    <p class="text-white-50 small mb-0">@SharedLocalizer["CorrectIncorrectData"]</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <i class="fas fa-trash fa-2x text-danger mb-2"></i>
                                    <h6 class="text-white">@SharedLocalizer["RightToDelete"]</h6>
                                    <p class="text-white-50 small mb-0">@SharedLocalizer["RequestDataDeletion"]</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <i class="fas fa-download fa-2x text-success mb-2"></i>
                                    <h6 class="text-white">@SharedLocalizer["RightToData"]</h6>
                                    <p class="text-white-50 small mb-0">@SharedLocalizer["DataReadableFormat"]</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <i class="fas fa-ban fa-2x text-warning mb-2"></i>
                                    <h6 class="text-white">@SharedLocalizer["RightToRestrict"]</h6>
                                    <p class="text-white-50 small mb-0">@SharedLocalizer["LimitDataUsage"]</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <i class="fas fa-times-circle fa-2x text-danger mb-2"></i>
                                    <h6 class="text-white">@SharedLocalizer["RightToObjection"]</h6>
                                    <p class="text-white-50 small mb-0">@SharedLocalizer["ObjectProcessing"]</p>
                                </div>
                            </div>
                        </div>
                        <div class="alert alert-info mt-4 mb-0">
                            <p class="mb-0">
                                <i class="fas fa-envelope"></i> @SharedLocalizer["ExerciseRights"] <strong>privacy@safecasino.be</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Beveiliging -->
<div class="section-bg-card">
    <div class="container py-5">
        <h2 class="section-title mb-4">
            <i class="fas fa-lock text-gold"></i> 5. @SharedLocalizer["DataSecurity"]
        </h2>
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <p class="text-white-50 mb-4">
                            @SharedLocalizer["SecurityMeasures"]
                        </p>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h6 class="text-white mb-2">SSL/TLS @SharedLocalizer["Encryption"]</h6>
                                        <p class="text-white-50 small mb-0">@SharedLocalizer["AllCommunicationEncrypted"]</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h6 class="text-white mb-2">@SharedLocalizer["SecureServers"]</h6>
                                        <p class="text-white-50 small mb-0">@SharedLocalizer["DataStoredSecureServers"]</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h6 class="text-white mb-2">@SharedLocalizer["FirewallProtection"]</h6>
                                        <p class="text-white-50 small mb-0">@SharedLocalizer["AdvancedFirewalls"]</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-check-circle text-success fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h6 class="text-white mb-2">@SharedLocalizer["RegularAudits"]</h6>
                                        <p class="text-white-50 small mb-0">@SharedLocalizer["IndependentSecurityAudits"]</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact -->
<div class="section-bg-dark">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="text-white display-5 fw-bold mb-4">
                    @SharedLocalizer["PrivacyQuestions"]
                </h2>
                <p class="text-white-50 lead mb-4">
                    @SharedLocalizer["FreeToContact"]
                </p>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-promo btn-lg px-5">
                    <i class="fas fa-envelope"></i> @SharedLocalizer["Contact"]
                </a>
            </div>
        </div>
    </div>
</div>