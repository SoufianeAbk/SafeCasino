<!-- Statistieken -->
<div class="section-bg-card">
    <div class="container py-5">
        <div class="row text-center g-4">
            <div class="col-md-3">
                <div class="stat-item">
                    <i class="fas fa-users fa-3x text-gold mb-3"></i>
                    <h2 class="text-white display-4 fw-bold mb-2">10K+</h2>
                    <p class="text-white-50 mb-0">Actieve Spelers</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <i class="fas fa-gamepad fa-3x text-gold mb-3"></i>
                    <h2 class="text-white display-4 fw-bold mb-2">9000+</h2>
                    <p class="text-white-50 mb-0">Casino Games</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <i class="fas fa-trophy fa-3x text-gold mb-3"></i>
                    <h2 class="text-white display-4 fw-bold mb-2">€30K</h2>
                    <p class="text-white-50 mb-0">Dagelijkse Prijzenpot</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <i class="fas fa-star fa-3x text-gold mb-3"></i>
                    <h2 class="text-white display-4 fw-bold mb-2">98%</h2>
                    <p class="text-white-50 mb-0">Beste RTP</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="section-bg-dark">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="text-white display-5 fw-bold mb-4">
                    Word Deel van de SafeCasino Familie
                </h2>
                <p class="text-white-50 lead mb-4">
                    Sluit je aan bij duizenden tevreden spelers en ervaar het verschil.
                </p>
                @if (User.Identity?.IsAuthenticated != true)
                {
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-promo btn-lg px-5">
                            <i class="fas fa-user-plus"></i> REGISTREER NU
                        </a>
                        <a asp-controller="Games" asp-action="Index" class="btn btn-outline-light btn-lg px-5">
                            <i class="fas fa-gamepad"></i> BEKIJK GAMES
                        </a>
                    </div>
                }
                else
                {
                    <a asp-controller="Games" asp-action="Index" class="btn btn-promo btn-lg px-5">
                        <i class="fas fa-play"></i> SPEEL NU
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stat-item {
            padding: 2rem;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
        }

            .stat-item:hover {
                transform: translateY(-5px);
                background: rgba(255, 255, 255, 0.08);
            }
    </style>
}
