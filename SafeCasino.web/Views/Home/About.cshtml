@inject IStringLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["AboutUs"];
}

<!-- Hero Section -->
<div class="hero-section text-white">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-12 text-center fade-in-up">
                <h1 class="display-3 fw-bold mb-4">
                    <i class="fas fa-info-circle text-gold"></i> @SharedLocalizer["AboutUs"]
                </h1>
                <p class="lead mb-5" style="font-size: 1.4rem; max-width: 800px; margin: 0 auto;">
                    @SharedLocalizer["TrustedOnlineCasino"]
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Onze Missie -->
<div class="section-bg-dark">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow-lg">
                    <div class="card-header text-center" style="background: linear-gradient(135deg, var(--secondary-purple) 0%, var(--accent-purple) 100%);">
                        <h2 class="text-white mb-0">
                            <i class="fas fa-bullseye"></i> @SharedLocalizer["OurMission"]
                        </h2>
                    </div>
                    <div class="card-body">
                        <p class="text-white lead text-center mb-4">
                            @SharedLocalizer["MissionStatement"]
                        </p>
                        <p class="text-white-50 mb-3">
                            @SharedLocalizer["MissionDescription"]
                        </p>
                        <p class="text-white-50 mb-0">
                            @SharedLocalizer["MissionStats"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Waarom SafeCasino -->
<div class="section-bg-card">
    <div class="container py-5">
        <h2 class="text-center section-title mb-5">
            <i class="fas fa-star text-gold"></i> @SharedLocalizer["WhySafeCasino"]
        </h2>
        <div class="row g-4">
            <!-- Veiligheid -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-shield-alt fa-4x text-success mb-3"></i>
                        <h4 class="text-white mb-3">@SharedLocalizer["CompletelySecure"]</h4>
                        <p class="text-white-50 mb-0">
                            @SharedLocalizer["SSLEncryptionSecurePayments"]
                        </p>
                    </div>
                </div>
            </div>

            <!-- Vergund -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-certificate fa-4x text-primary mb-3"></i>
                        <h4 class="text-white mb-3">@SharedLocalizer["LicensedCasino"]</h4>
                        <p class="text-white-50 mb-0">
                            @SharedLocalizer["OfficiallyLicensedRegulated"]
                        </p>
                    </div>
                </div>
            </div>

            <!-- Support -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-headset fa-4x text-info mb-3"></i>
                        <h4 class="text-white mb-3">@SharedLocalizer["Support24"]</h4>
                        <p class="text-white-50 mb-0">
                            @SharedLocalizer["TeamAlwaysReady"]
                        </p>
                    </div>
                </div>
            </div>

            <!-- RTP -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-percentage fa-4x text-gold mb-3"></i>
                        <h4 class="text-white mb-3">@SharedLocalizer["BestRTP"]</h4>
                        <p class="text-white-50 mb-0">
                            @SharedLocalizer["HighestPayoutPercentages"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Onze Waarden -->
<div class="section-bg-dark">
    <div class="container py-5">
        <h2 class="text-center section-title mb-5">
            <i class="fas fa-heart text-danger"></i> @SharedLocalizer["OurValues"]
        </h2>
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="text-white mb-3">
                            <i class="fas fa-check-circle text-success"></i> @SharedLocalizer["Fairness"]
                        </h4>
                        <p class="text-white-50 mb-0">
                            @SharedLocalizer["FairnessDescription"]
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="text-white mb-3">
                            <i class="fas fa-user-shield text-primary"></i> @SharedLocalizer["Safety"]
                        </h4>
                        <p class="text-white-50 mb-0">
                            @SharedLocalizer["SafetyDescription"]
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="text-white mb-3">
                            <i class="fas fa-handshake text-warning"></i> @SharedLocalizer["Responsibility"]
                        </h4>
                        <p class="text-white-50 mb-0">
                            @SharedLocalizer["ResponsibilityDescription"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistieken -->
<div class="section-bg-card">
    <div class="container py-5">
        <div class="row text-center g-4">
            <div class="col-md-3">
                <div class="stat-item">
                    <i class="fas fa-users fa-3x text-gold mb-3"></i>
                    <h2 class="text-white display-4 fw-bold mb-2">10K+</h2>
                    <p class="text-white-50 mb-0">@SharedLocalizer["ActivePlayers"]</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <i class="fas fa-gamepad fa-3x text-gold mb-3"></i>
                    <h2 class="text-white display-4 fw-bold mb-2">9000+</h2>
                    <p class="text-white-50 mb-0">@SharedLocalizer["CasinoGames"]</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <i class="fas fa-trophy fa-3x text-gold mb-3"></i>
                    <h2 class="text-white display-4 fw-bold mb-2">€30K</h2>
                    <p class="text-white-50 mb-0">@SharedLocalizer["DailyPrizePool"]</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <i class="fas fa-star fa-3x text-gold mb-3"></i>
                    <h2 class="text-white display-4 fw-bold mb-2">98%</h2>
                    <p class="text-white-50 mb-0">@SharedLocalizer["BestRTP"]</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="section-bg-dark">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="text-white display-5 fw-bold mb-4">
                    @SharedLocalizer["JoinSafeCasinoFamily"]
                </h2>
                <p class="text-white-50 lead mb-4">
                    @SharedLocalizer["JoinThousandsHappyPlayers"]
                </p>
                @if (User.Identity?.IsAuthenticated != true)
                {
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-promo btn-lg px-5">
                            <i class="fas fa-user-plus"></i> @SharedLocalizer["RegisterNow"]
                        </a>
                        <a asp-controller="Games" asp-action="Index" class="btn btn-outline-light btn-lg px-5">
                            <i class="fas fa-gamepad"></i> @SharedLocalizer["ViewGames"]
                        </a>
                    </div>
                }
                else
                {
                    <a asp-controller="Games" asp-action="Index" class="btn btn-promo btn-lg px-5">
                        <i class="fas fa-play"></i> @SharedLocalizer["PlayNow"]
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stat-item {
            padding: 2rem;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
        }

            .stat-item:hover {
                transform: translateY(-5px);
                background: rgba(255, 255, 255, 0.08);
            }
    </style>
}