<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
@using System.Globalization
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SafeCasino</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/text-contrast-fixes.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-dice"></i> SAFECASINO
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> @SharedLocalizer["Home"]
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index">
                                <i class="fas fa-gamepad"></i> @SharedLocalizer["Casino"]
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index">
                                <i class="fas fa-dice"></i> @SharedLocalizer["Dice"]
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index" asp-route-categoryId="2">
                                <i class="fas fa-video"></i> @SharedLocalizer["LiveCasino"]
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Popular">
                                <i class="fas fa-gift"></i> @SharedLocalizer["Promos"]
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index">
                                <i class="fas fa-th"></i> @SharedLocalizer["NapoleonHub"]
                            </a>
                        </li>

                        <!-- ✅ Admin Panel Link -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-crown"></i> Admin Panel
                                </a>
                            </li>
                        }

                    </ul>

                    <!-- Language Selector -->
                    <div class="d-flex align-items-center me-3">
                        <div class="dropdown">
                            <button class="btn btn-link text-light dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown">
                                <i class="fas fa-globe"></i> @CultureInfo.CurrentCulture.DisplayName
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end" style="background: var(--card-bg); border: 2px solid rgba(255, 255, 255, 0.1);">
                                <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="nl" asp-route-returnUrl="@Context.Request.Path" style="color: var(--text-light);">🇳🇱 Nederlands</a></li>
                                <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="en" asp-route-returnUrl="@Context.Request.Path" style="color: var(--text-light);">🇬🇧 English</a></li>
                                <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="fr" asp-route-returnUrl="@Context.Request.Path" style="color: var(--text-light);">🇫🇷 Français</a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- User Menu -->
                    <ul class="navbar-nav">

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle fa-lg me-2"></i>
                                    <span>@User.Identity.Name</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end" style="background: var(--card-bg); border: 2px solid rgba(255, 255, 255, 0.1);">

                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile" style="color: var(--text-light);">
                                            <i class="fas fa-user-circle"></i> @SharedLocalizer["MyProfile"]
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item" href="#" style="color: var(--text-light);">
                                            <i class="fas fa-wallet"></i> @SharedLocalizer["MyBalance"]
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" style="border-color: rgba(255, 255, 255, 0.1);"></li>

                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item" style="color: var(--text-light);">
                                                <i class="fas fa-sign-out-alt"></i> @SharedLocalizer["Logout"]
                                            </button>
                                        </form>
                                    </li>

                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> @SharedLocalizer["Login"]
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-promo" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> @SharedLocalizer["Register"]
                                </a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>