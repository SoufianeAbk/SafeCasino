<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SafeCasino</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-dice"></i> SAFECASINO
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index">
                                <i class="fas fa-gamepad"></i> Casino
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index">
                                <i class="fas fa-dice"></i> Dice
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index" asp-route-categoryId="2">
                                <i class="fas fa-video"></i> Live Casino
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Popular">
                                <i class="fas fa-gift"></i> Promos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index">
                                <i class="fas fa-th"></i> Napoleon Hub
                            </a>
                        </li>
                    </ul>

                    <!-- Search Icon -->
                    <div class="d-flex align-items-center me-3">
                        <button class="btn btn-link text-light" type="button">
                            <i class="fas fa-search fa-lg"></i>
                        </button>
                    </div>

                    <!-- User Menu -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- User Profile Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                   role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle fa-lg me-2"></i>
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" style="background: var(--card-bg); border: 2px solid rgba(255, 255, 255, 0.1);">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile" style="color: var(--text-light);">
                                            <i class="fas fa-user-circle"></i> Mijn Profiel
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" style="color: var(--text-light);">
                                            <i class="fas fa-wallet"></i> Mijn Saldo
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" style="border-color: rgba(255, 255, 255, 0.1);"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item" style="color: var(--text-light);">
                                                <i class="fas fa-sign-out-alt"></i> Uitloggen
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Login Button -->
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <!-- Register Button -->
                            <li class="nav-item">
                                <a class="btn btn-promo" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @if (TempData["Success"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container py-5">
            <div class="row">
                <!-- Over SafeCasino -->
                <div class="col-md-3 mb-4">
                    <h5 class="mb-3">
                        <i class="fas fa-dice"></i> SafeCasino
                    </h5>
                    <p class="text-muted small">
                        SafeCasino is jouw vertrouwde online casino met de grootste collectie games.
                        Speel veilig en verantwoord met de beste RTP percentages.
                    </p>
                    <!-- Social Media -->
                    <div class="social-links mt-3">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook fa-2x"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter fa-2x"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram fa-2x"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-youtube fa-2x"></i></a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 mb-4">
                    <h5 class="mb-3">Casino Games</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Games" asp-action="Index" asp-route-categoryId="5" class="text-white-50">
                                <i class="fas fa-angle-right"></i> Slots
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Games" asp-action="Index" asp-route-categoryId="3" class="text-white-50">
                                <i class="fas fa-angle-right"></i> Roulette
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Games" asp-action="Index" asp-route-categoryId="1" class="text-white-50">
                                <i class="fas fa-angle-right"></i> Blackjack
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Games" asp-action="Index" asp-route-categoryId="2" class="text-white-50">
                                <i class="fas fa-angle-right"></i> Live Casino
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Games" asp-action="Popular" class="text-white-50">
                                <i class="fas fa-angle-right"></i> Populaire Games
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Info -->
                <div class="col-md-3 mb-4">
                    <h5 class="mb-3">Informatie</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#" class="text-white-50">
                                <i class="fas fa-angle-right"></i> Over Ons
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-white-50">
                                <i class="fas fa-angle-right"></i> Verantwoord Spelen
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Privacy" class="text-white-50">
                                <i class="fas fa-angle-right"></i> Privacy Policy
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-white-50">
                                <i class="fas fa-angle-right"></i> Algemene Voorwaarden
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-white-50">
                                <i class="fas fa-angle-right"></i> Contact
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Support & Veiligheid -->
                <div class="col-md-3 mb-4">
                    <h5 class="mb-3">Support & Veiligheid</h5>
                    <p class="text-muted small mb-3">
                        <i class="fas fa-headset"></i> 24/7 Klantenservice<br />
                        <i class="fas fa-envelope"></i> support@safecasino.be<br />
                        <i class="fas fa-phone"></i> +32 2 123 45 67
                    </p>
                    <div class="mt-3">
                        <span class="badge bg-success me-2 mb-2">18+</span>
                        <span class="badge bg-warning text-dark me-2 mb-2">Speel Bewust</span>
                        <span class="badge bg-info mb-2">SSL Beveiligd</span>
                    </div>
                </div>
            </div>

            <!-- Payment Methods -->
            <div class="row mt-4 pt-4 border-top" style="border-color: rgba(255, 255, 255, 0.1) !important;">
                <div class="col-12">
                    <h6 class="text-center text-muted mb-3">Betaalmethodes</h6>
                    <div class="d-flex justify-content-center flex-wrap gap-3">
                        <span class="badge bg-secondary p-2"><i class="fab fa-cc-visa fa-2x"></i></span>
                        <span class="badge bg-secondary p-2"><i class="fab fa-cc-mastercard fa-2x"></i></span>
                        <span class="badge bg-secondary p-2"><i class="fab fa-cc-paypal fa-2x"></i></span>
                        <span class="badge bg-secondary p-2"><i class="fab fa-bitcoin fa-2x"></i></span>
                        <span class="badge bg-secondary p-2"><i class="fas fa-university fa-2x"></i></span>
                    </div>
                </div>
            </div>

            <!-- Copyright -->
            <hr class="my-4" style="border-color: rgba(255, 255, 255, 0.1);" />
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="text-muted small mb-0">
                        &copy; 2025 SafeCasino. Alle rechten voorbehouden.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="text-muted small mb-0">
                        <i class="fas fa-shield-alt text-success"></i> Beveiligd door SSL Encryptie |
                        <i class="fas fa-check-circle text-success"></i> Vergunde Casino
                    </p>
                </div>
            </div>

            <!-- Disclaimer -->
            <div class="row mt-3">
                <div class="col-12">
                    <p class="text-muted small text-center mb-0" style="font-size: 0.75rem;">
                        <strong>Let op:</strong> Gokken kan verslavend zijn. Speel verantwoord en binnen je grenzen.
                        SafeCasino is een 18+ platform. Als je hulp nodig hebt, neem contact op met een verslavingszorginstelling.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
