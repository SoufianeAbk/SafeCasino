@using SafeCasino.Web.ViewModels.Admin
@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-5">
    <h1 class="mb-4">
        <i class="fas fa-tachometer-alt"></i> Admin Dashboard
    </h1>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3>@Model.TotalUsers</h3>
                    <p class="text-muted">Totaal Gebruikers</p>
                    <a asp-action="Users" class="btn btn-sm btn-primary">Beheer</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-gamepad fa-3x text-success mb-3"></i>
                    <h3>@Model.TotalGames</h3>
                    <p class="text-muted">Totaal Games</p>
                    <a asp-controller="Games" asp-action="Index" class="btn btn-sm btn-success">Bekijk</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-comment-dots fa-3x text-warning mb-3"></i>
                    <h3>@Model.PendingReviews</h3>
                    <p class="text-muted">Pending Reviews</p>
                    <a asp-action="Reviews" class="btn btn-sm btn-warning">Modereer</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-user-check fa-3x text-info mb-3"></i>
                    <h3>@Model.ActiveUsers</h3>
                    <p class="text-muted">Actieve Gebruikers</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-tasks"></i> Snelle Acties</h4>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-action="Users" class="list-group-item list-group-item-action">
                            <i class="fas fa-users"></i> Gebruikers Beheren
                        </a>
                        <a asp-action="Reviews" class="list-group-item list-group-item-action">
                            <i class="fas fa-comment-dots"></i> Reviews Modereren
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>