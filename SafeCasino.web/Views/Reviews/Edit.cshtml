@model SafeCasino.Web.ViewModels.CreateReviewViewModel
@{
    ViewData["Title"] = SharedLocalizer["EditReview"];
    var reviewId = ViewBag.ReviewId;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="fas fa-edit"></i> @SharedLocalizer["EditReviewFor"] @Model.GameName
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Reviews" asp-route-id="@reviewId" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="GameId" />

                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label">@SharedLocalizer["Rating"]</label>
                            <div class="rating-input">
                                <input type="radio" asp-for="Rating" value="5" id="star5" />
                                <label for="star5" title="@SharedLocalizer["FiveStars"]">★</label>
                                <input type="radio" asp-for="Rating" value="4" id="star4" />
                                <label for="star4" title="@SharedLocalizer["FourStars"]">★</label>
                                <input type="radio" asp-for="Rating" value="3" id="star3" />
                                <label for="star3" title="@SharedLocalizer["ThreeStars"]">★</label>
                                <input type="radio" asp-for="Rating" value="2" id="star2" />
                                <label for="star2" title="@SharedLocalizer["TwoStars"]">★</label>
                                <input type="radio" asp-for="Rating" value="1" id="star1" />
                                <label for="star1" title="@SharedLocalizer["OneStar"]">★</label>
                            </div>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">@SharedLocalizer["Title"]</label>
                            <input asp-for="Title" class="form-control" placeholder="@SharedLocalizer["SummarizeExperience"]" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">@SharedLocalizer["Content"]</label>
                            <textarea asp-for="Content" class="form-control" rows="6"
                                      placeholder="@SharedLocalizer["TellUsAboutExperience"]"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            @SharedLocalizer["ReviewNeedsApproval"]
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.GameId"
                               class="btn btn-secondary">
                                <i class="fas fa-times"></i> @SharedLocalizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> @SharedLocalizer["UpdateReview"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        .rating-input {
            direction: rtl;
            unicode-bidi: bidi-override;
            font-size: 2rem;
        }

            .rating-input input {
                display: none;
            }

            .rating-input label {
                color: #ddd;
                cursor: pointer;
                padding: 0 5px;
            }

                .rating-input label:hover,
                .rating-input label:hover ~ label,
                .rating-input input:checked ~ label {
                    color: #ffc107;
                }
    </style>
}